
@model Skill
@inject CourseProvider.Interface.ISkillRepository skill

@{

}

<style>

    .addContainer
    {
        display : flex;
        justify-content : center;
        align-items : center;
        width : 100%;
        height : 600px;
        border-radius : 30px;
        background-color : aquamarine;
    }

    .formcontainer
    {
        align-items:center;
        display : flex;
        justify-content : center;
        flex-direction : column;
        background-color : cadetblue;
        width : 50%;
        height : 50%;
        border-radius : 20px;
    }

    .formcontainer button
    {
        margin-top : 1rem;
        margin-bottom : 1rem;
    }

    .formContent
    {
        display : flex;
        justify-content : center;
        flex-direction : column;
    }

    .formContent label
    {
        font-size : 20px;
        font-weight : 500;
        margin-bottom : 0.5rem;
    }

</style>

<body>
    <div class="addContainer">
       <div class="formcontainer">
           <form class="formContent" asp-controller="Skill" asp-action="Add" enctype="multipart/form-data" method="post">
               <label>Name:</label>
               <input asp-for="Name" type="text" placeholder="the name of your skill"></input>
                <button class="btn btn-primary">Add Skill</button>
           </form>
          
       </div>
    </div>
</body>